generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lanche {
  id          Int                @id @default(autoincrement())
  name        String @unique
  description String
  price       Float
  image       String
  ingredientes LancheIngrediente[]
  compra      CompraItem[]
  active Boolean @default(true)
}

model Ingrediente {
  id    Int                @id @default(autoincrement())
  name  String
  quantidadeEstoque Int
  unidadeMedida  String
  lanches LancheIngrediente[]
}

model LancheIngrediente {
  lancheId      Int
  ingredienteId Int
  quantidadePadr√£o  Int @default(1)
  lanche         Lanche      @relation(fields: [lancheId], references: [id], onDelete: Cascade)
  ingrediente    Ingrediente @relation(fields: [ingredienteId], references: [id], onDelete: Cascade)
  @@id([lancheId, ingredienteId])
}

model Acompanhamento {
  id Int                @id @default(autoincrement())
  name String       
  quantidadeEstoque Int
  compra CompraItem[]
}

model Cliente {
  id       Int      @id @default(autoincrement())
  name     String
  address  String
  phone    String
  email    String   @unique
  password String
  image    String?
  compras  Compra[]
}

model Admin {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
}



model Compra {
  id           Int            @id @default(autoincrement())
  clienteId    Int
  total        Float
  observacao   String?
  cliente      Cliente        @relation(fields: [clienteId], references: [id])
  itens      CompraItem[]
  createdAt    DateTime       @default(now())
  address       String
}

model CompraItem {
  id        Int @id @default(autoincrement())
  lancheId        Int?    
  lanche          Lanche?        @relation(fields: [lancheId], references: [id])
  acompanhamentoId Int? 
  acompanhamento  Acompanhamento? @relation(fields: [acompanhamentoId], references: [id])
  quantidade Int
  compraId Int
  nomeDoProduto  String
  valorUnitario   Float
  compra  Compra @relation(fields: [compraId], references: [id], onDelete: Cascade)
}
