generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Lanche {
  id          Int                @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  ingredientes LancheIngrediente[]
  comprasLanches CompraLanche[]
  active Boolean @default(true)
}

model Ingrediente {
  id    Int                @id @default(autoincrement())
  name  String
  lanches LancheIngrediente[]
}

model LancheIngrediente {
  lancheId      Int
  ingredienteId Int
  lanche         Lanche      @relation(fields: [lancheId], references: [id], onDelete: Cascade)
  ingrediente    Ingrediente @relation(fields: [ingredienteId], references: [id], onDelete: Cascade)
  @@id([lancheId, ingredienteId])
}

model Cliente {
  id       Int      @id @default(autoincrement())
  name     String
  address  String
  phone    String
  email    String   @unique
  password String
  image    String?
  compras  Compra[]
}

model Admin {
  id       Int      @id @default(autoincrement())
  name     String
  email    String   @unique
  password String
}



model Compra {
  id           Int            @id @default(autoincrement())
  clienteId    Int
  total        Float
  observacao   String?
  cliente      Cliente        @relation(fields: [clienteId], references: [id])
  lanches      CompraLanche[]
  createdAt    DateTime       @default(now())
  address       String
}

model CompraLanche {
  quantidade Int
  compraId Int
  lancheId Int
  compra   Compra @relation(fields: [compraId], references: [id], onDelete: Cascade)
  lanche   Lanche @relation(fields: [lancheId], references: [id], onDelete: Cascade)

  @@id([compraId, lancheId])
}
